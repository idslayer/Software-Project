{
  "index_patterns": ["norm-logs-*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1
  },
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "level": {
        "type": "keyword"
      },
      "timestamp": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "message": {
        "type": "text"
      },
      "source": {
        "type": "keyword"
      },
      "salt": {
        "type": "keyword"
      },
      "hash": {
        "type": "keyword"
      },
      "app": {
        "type": "keyword"
      },
      "env": {
        "type": "keyword"
      }
    }
  }
}
